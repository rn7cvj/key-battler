{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2022",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "allowImportingTsExtensions": true
  },
  "include": ["src", "vite.config.ts"]
}
